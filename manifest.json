{
  "manifest_version": 2,
  "name": "Syncbird",
  "version": "1.0.0",
  "description": "Exchange/Office365 integration for Thunderbird with OWA and server autodiscovery",
  "author": "Syncbird Extension",
  
  "applications": {
    "gecko": {
      "id": "syncbird@thunderbird.extension",
      "strict_min_version": "78.0"
    }
  },

  "background": {
    "scripts": [
      "utils/xml-parser.js",
      "utils/oauth-flow.js",
      "config/settings.js",
      "services/auth-manager.js",
      "api/ews-soap.js",
      "api/autodiscovery.js",
      "api/exchange-client.js",
      "services/email-sync.js",
      "services/contact-sync.js",
      "services/calendar-sync.js",
      "background.js"
    ],
    "persistent": true
  },

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "identity",
    "https://*/*",
    "http://*/*"
  ],

  "icons": {
    "16": "icons/icon-16.svg",
    "32": "icons/icon-32.svg",
    "64": "icons/icon-64.svg"
  },

  "options_ui": {
    "page": "content/account-setup.html",
    "open_in_tab": true
  },

  "web_accessible_resources": [
    "content/*",
    "icons/*"
  ]
}
