{
  "manifest_version": 2,
  "name": "Syncbird",
  "id": "syncbird@thunderbird.extension",
  "version": "1.0.0",
  "description": "Exchange/Office365 integration for Thunderbird via EWS Basic Auth",
  "icons": {
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png"
  },
  "permissions": [
    "accountsRead",
    "messagesRead",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "content/add-account.html",
    "open_in_tab": false
  },
  "applications": {
    "gecko": {
      "id": "syncbird@thunderbird.extension"
    }
  },
  "homepage_url": "https://github.com/dbaldoni/ExchangeIntegrator",
  "author": "Your Name"
}

